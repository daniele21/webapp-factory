{
  "brand": {
    "name": "Webapp Factory",
    "logoUrl": "/icons/logo-192.png",
    "faviconUrl": "/icons/logo-32.png"
  },
  "theme": {
    "// Note": "You can set defaultBrand and defaultVisual here. ThemeProvider stores user choices in localStorage (wf:brand, wf:visual) and won't be overwritten if present.",
    "light": {
      "bg": "0 0% 100%",
      "surface1": "210 30% 97%",
      "surface2": "210 28% 94%",
      "text": "222 50% 12%",
      "muted": "220 12% 46%",
      "border": "213 18% 88%",
      "accent": "217 100% 62%",
      "accentFg": "0 0% 100%",
      "ring": "217 100% 62%",
      "chart1": "217 91% 60%",
      "chart2": "262 90% 67%",
      "chart3": "199 89% 50%",
      "chartGrid": "215 16% 86%",
      "chartAxis": "222 12% 42%"
    },
    "dark": {
      "bg": "222 34% 7%",
      "surface1": "222 28% 11%",
      "surface2": "222 24% 15%",
      "text": "210 20% 96%",
      "muted": "215 14% 70%",
      "border": "220 14% 24%",
      "accent": "217 100% 74%",
      "accentFg": "222 40% 12%",
      "ring": "217 100% 74%",
      "chart1": "217 98% 76%",
      "chart2": "262 90% 76%",
      "chart3": "199 89% 68%",
      "chartGrid": "220 12% 24%",
      "chartAxis": "220 15% 62%"
    },
    "defaultBrand": "aurora",
    "defaultVisual": "finance",
    "lockBrand": true,
    "lockVisual": true,
    "transparency": false,
    "radius": 14,
    "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto"
  },
  "layout": {
    "sidebar": {
      "enabled": true,
      "width": 264,
      "collapsedWidth": 72,
      "defaultCollapsed": false,
      "showPlanCard": true
    },
    "topbar": {
      "search": true,
      "commandPalette": true,
      "showNotifications": true,
      "showThemeToggle": true
    },
    "mobileTabs": {
      "enabled": true
    }
  },
  "navigation": [
    {
      "id": "home",
      "label": "Dashboard",
      "to": "/dashboard",
      "icon": "Home"
    },
    {
      "id": "users",
      "label": "Users",
      "to": "/users",
      "icon": "Users",
      "roles": ["admin", "manager", "user"]
    },
    {
      "id": "billing",
      "label": "Billing",
      "to": "/billing",
      "icon": "CreditCard",
      "plans": ["pro", "enterprise", "free"]
    },
    {
      "id": "settings",
      "label": "Settings",
      "to": "/settings",
      "icon": "Settings"
    }
  ],
  "features": {
    "nprogress": true
  },
  "feedback": {
    "requireAuth": true
  },
  "analytics": {
    "enabled": true,
    "googleAnalyticsId": "G-XXXXXXXXXX",
    "googleAnalyticsConfig": {
      "anonymize_ip": true
    }
  },
  "components": {
    "authMenu": {
      "enabled": true,
      "loginProvider": "google",
      "loginLabel": "Sign In",
      "showSettings": true,
      "providers": [
        { "id": "google", "label": "Google Login" }
      ]
    }
  },
  "cookies": {
    "categories": [
      { "id": "necessary", "label": "Strictly necessary", "description": "Required for core functionality", "isEssential": true },
      { "id": "preferences", "label": "Preferences", "description": "Remember display & language settings" },
      { "id": "statistics", "label": "Statistics", "description": "Anonymous site analytics (e.g. GA)" },
      { "id": "marketing", "label": "Marketing", "description": "Personalised ads and tracking" }
    ],
    "default": ["necessary"]
  },
  "notifications": {
    "inApp": true,
    "webPush": true,
    "email": true,
    "publicKey": "BOr9xHIvJx4ExampleVapidKeyBase64",
    "channels": [
      {
        "id": "product-updates",
        "label": "Product updates",
        "description": "Feature launches, roadmap highlights, and release notes.",
        "defaultEnabled": true,
        "channel": "email"
      },
      {
        "id": "system-alerts",
        "label": "System alerts",
        "description": "Real-time incidents and maintenance announcements.",
        "defaultEnabled": true,
        "channel": "webPush"
      },
      {
        "id": "team-mentions",
        "label": "Mentions & assignments",
        "description": "When teammates mention you or assign work items.",
        "defaultEnabled": true,
        "channel": "inApp"
      }
    ],
    "subscriptionEndpoint": "/api/notifications/subscriptions",
    "fallbackEmailTemplate": "default"
  },
  "security": {
    "csp": {
      "default": ["'self'"],
      "script": ["'self'", "'unsafe-inline'", "https://accounts.google.com/gsi/client"],
      "style": ["'self'", "'unsafe-inline'"],
      "img": ["'self'", "data:", "https://cdn.webappfactory.dev"],
      "connect": ["'self'", "https://api.webappfactory.dev"],
      "font": ["'self'", "data:"],
      "frame": ["'self'"],
      "media": ["'self'"],
      "manifest": ["'self'"],
      "worker": ["'self'"],
      "frameAncestors": ["'self'"],
      "perTenant": {
        "acme": {
          "img": ["'self'", "https://media.acme.dev"],
          "script": ["'self'", "https://analytics.acme.dev"]
        },
        "globex": {
          "connect": ["'self'", "https://api.globex.example"],
          "img": ["'self'", "https://cdn.globex.example"]
        }
      }
    },
    "hsts": true,
    "referrerPolicy": "strict-origin-when-cross-origin"
  },
  "pwa": {
    "backgroundSync": true,
    "offlinePage": "/offline.html",
    "appShellCaching": false,
    "updatePrompt": true
  }
}
